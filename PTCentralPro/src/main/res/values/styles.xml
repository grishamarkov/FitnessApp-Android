    <style name="button_text_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/view_margin</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/text_field</item>

    </style>

    <style name="textBoldSelected">
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MessageEditText">
        <item name="android:inputType">text|textMultiLine|textCapSentences</item>
        <item name="android:gravity">top</item>
        <item name="android:minLines">5</item>

        <item name="android:background">@drawable/text_field</item>
        <item name="android:hint">@string/com_appboy_feedback_form_message</item>
    </style>

    <style name="FeedList">
        <item name="android:background">@android:color/transparent</item>

        <item name="android:divider">@android:color/transparent</item>

        <item name="android:paddingLeft">@dimen/view_margin</item>
        <item name="android:paddingRight">@dimen/view_margin</item>
        <item name="android:paddingBottom">@dimen/view_margin</item>
        <item name="android:paddingTop">@dimen/view_margin</item>

    </style>


    <style name="SwitchText">
        <item name="android:paddingLeft">8px</item>
        <item name="android:paddingBottom">8px</item>
        <item name="android:textColor">#FFeeFFee</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">#BB000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="mySwitchStyle">
        <item name="track">@drawable/switch_track_green</item>
        <item name="thumb">@drawable/background_fenced</item>
        <item name="switchTextAppearanceAttrib">@style/mySwitchTextAppearance</item>
        <item name="textOn">ON</item>
        <item name="textOff">OFF</item>
        <item name="pushStyle">false</item>
        <item name="textOnThumb">true</item>
        <item name="thumbExtraMovement">0dp</item>
        <item name="thumbTextPadding">6dp</item>
        <item name="trackTextPadding">6dp</item>
        <item name="switchMinWidth">69dp</item>
        <item name="switchMinHeight">45dp</item>
        <item name="switchPadding">6dp</item>
    </style>

    <style name="mySwitchTextAppearance">
        <item name="textColor">#FFeeFFee</item>
        <item name="textColorHighlight">#FFeeFFee</item>
        <item name="textColorHint">#FFeeFFee</item>
        <item name="textColorLink">#FFeeFFee</item>
        <item name="textSize">16sp</item>
        <item name="textStyle">normal</item>
    </style>

</resources>
