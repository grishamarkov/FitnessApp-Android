    <style name="input_field_name">
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="input_field">
        <item name="android:ems">10</item>
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:background">@drawable/text_field</item>

    </style>

    <style name="text_btn">
        <item name="android:ems">10</item>
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:background">@drawable/bg_white</item>
    </style>

    <style name="check_box">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="brown_button">
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:padding">@dimen/view_margin</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="green_button">
        <item name="android:background">@drawable/button_gray</item>
        <item name="android:padding">@dimen/view_margin</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="header_orange">
        <item name="android:background">@drawable/button_orange</item>
        <item name="android:padding">@dimen/view_margin_half</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/header_font_size</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>

