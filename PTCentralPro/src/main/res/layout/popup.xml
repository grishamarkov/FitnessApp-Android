<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="220dp"
    android:background="@drawable/dropdown_shadow"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_margin"
            android:gravity="right|center_vertical"
            android:text="Title"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/etTitle"
            style="@style/input_field"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/view_margin"
            android:layout_weight="1"
            android:ems="30"
            android:hint="Field Name"
            android:inputType="textNoSuggestions"
            android:paddingLeft="10dp"></EditText>
    </TableRow>

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_margin"
            android:gravity="right|center_vertical"
            android:text="Type"
            android:textSize="15dp" />

        <ToggleButton
            android:id="@+id/tbIsNumber"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

            android:layout_weight="1"
            android:text=""
            android:textOff="Number"
            android:textOn="Text" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_margin"
            android:gravity="right|center_vertical"
            android:text="Move"
            android:textSize="15dp" />

        <Button

            android:id="@+id/bMoveUp"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_orange"
            android:text="Up"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/bMoveDown"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_gray"

            android:text="Down"
            android:textColor="#FFFFFF" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_margin"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/view_margin"
            android:gravity="right|center_vertical"
            android:text="Delete"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bDelete"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/view_margin"
            android:layout_marginLeft="@dimen/view_margin"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/custom_btn_orange"
            android:text="Delete"
            android:textColor="#FFFFFF" />
    </TableRow>
</TableLayout>