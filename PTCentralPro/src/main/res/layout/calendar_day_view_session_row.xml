<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="1">

    <com.fitforbusiness.framework.view.RoundedImageView
        android:id="@+id/ivRowImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:focusable="false" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/tableRowOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvFirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:text="10:20 AM"
                android:textColor="@color/orange" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tableRowOne"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvSecondLabel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="ef"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvThirdLabel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/view_margin"
                android:singleLine="true"
                android:text="efe"
                android:textColor="@color/black" />
        </TableRow>
    </RelativeLayout>
</LinearLayout>