<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fitforbusiness.nafc.NavigationDrawerFragment">

    <LinearLayout
        android:paddingTop="2dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="2dp">
    <TableRow
        android:id="@+id/trTrainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_item_selector"
        android:clickable="true"
        android:visibility="visible">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="16dp">

            <com.fitforbusiness.framework.view.RoundedImageView
                android:id="@+id/ivTrainer"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center|left"
                android:layout_margin="@dimen/view_margin_half"
                android:clickable="true"
                android:padding="@dimen/view_margin"
                android:src="@drawable/ic_action_person"
                />

            <TextView
                android:id="@+id/tvProfileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/view_margin"
                android:text="Joe Trainer"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/nav_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/view_margin"
                android:text="joetrainer@gmail.com"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/nav_text"
                android:paddingTop="5dp" />
        </LinearLayout>


    </TableRow>
</LinearLayout>
    <!--    <ListView
            android:id="@+id/lvProfileRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1c1c1c"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />-->

    <ListView

        android:id="@+id/lvNavigationDrawerDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/navigation_drawer_background"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"

       />
</LinearLayout>