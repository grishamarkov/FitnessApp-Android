<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gray"
        android:orientation="vertical"
        android:padding="@dimen/view_margin"
        tools:ignore="ScrollViewSize">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:padding="@dimen/view_margin">

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/view_margin">


                    <com.fitforbusiness.framework.view.RoundedImageView
                        android:id="@+id/ivClient"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        tools:ignore="ContentDescription" />

                    <Button
                        android:id="@+id/bChooseFile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@android:drawable/ic_input_add"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="25dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="@dimen/view_margin"
                        android:background="@drawable/text_field"
                        android:ems="30"
                        android:hint="First Name"


                        android:inputType="textCapWords"
                        android:paddingLeft="@dimen/view_margin" />

                    <EditText
                        android:id="@+id/etLastName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginLeft="@dimen/view_margin"
                        android:layout_marginTop="@dimen/view_margin"
                        android:background="@drawable/text_field"

                        android:ems="30"
                        android:hint="Last Name"


                        android:inputType="textCapWords"
                        android:paddingLeft="@dimen/view_margin" />
                </LinearLayout>

            </TableRow>

            <TableRow

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/view_margin"
                    android:singleLine="true"

                    android:text="Email"
                    android:textSize="@dimen/label_font_size"

                    tools:ignore="HardcodedText,SpUsage"

                    />

                <EditText

                    android:id="@+id/etEmailID"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:layout_weight="1"
                    android:background="@drawable/text_field"
                    android:ems="30"

                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="@dimen/view_margin"

                    tools:ignore="HardcodedText" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/view_margin"
                    android:singleLine="true"

                    android:text="Phone #"
                    android:textSize="@dimen/label_font_size"

                    tools:ignore="HardcodedText,SpUsage" />

                <EditText
                    android:id="@+id/etPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_field"

                    android:ems="30"

                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/view_margin"

                    tools:ignore="HardcodedText" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/view_margin"
                    android:singleLine="true"
                    android:text="Emergency"
                    android:textSize="@dimen/label_font_size"

                    tools:ignore="HardcodedText,SpUsage" />

                <EditText
                    android:id="@+id/etEmergencyContactAddress"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_field"

                    android:ems="30"


                    android:hint="Emergency Contact"
                    android:inputType="textCapWords"
                    android:paddingLeft="@dimen/view_margin"

                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/view_margin"
                    android:singleLine="true"

                    android:text="Emergency #"
                    android:textSize="@dimen/label_font_size"

                    tools:ignore="HardcodedText,SpUsage" />

                <EditText
                    android:id="@+id/etEmergencyContactNo"

                    android:layout_width="match_parent"
                    android:layout_height="45dp"

                    android:layout_weight="1"
                    android:background="@drawable/text_field"
                    android:hint="Emergency Contact No"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/view_margin" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/view_margin"
                    android:singleLine="true"

                    android:text="DOB"
                    android:textSize="@dimen/label_font_size"

                    tools:ignore="HardcodedText,SpUsage" />

                <Button
                    android:id="@+id/bDOB"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_weight="1"

                    android:background="@drawable/text_field"
                    android:ems="30"
                    android:gravity="left|center_vertical"
                    android:hint="Date of Birth"
                    android:paddingLeft="@dimen/view_margin"

                    android:textColor="@color/black" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/view_margin"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginLeft="@dimen/view_margin"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/view_margin"
                    android:singleLine="true"

                    android:text="Gender"
                    android:textSize="@dimen/label_font_size"

                    tools:ignore="HardcodedText,SpUsage" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radGenderMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/view_margin"
                        android:checked="false"
                        android:text="Male"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/radGenderFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"
                        android:text="Female"
                        android:textColor="@color/black" />
                </RadioGroup>
            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:orientation="vertical">

            <Button
                style="@style/brown_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginRight="@dimen/view_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:text="Medical Information"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_marginLeft="@dimen/view_margin"

                android:layout_marginRight="@dimen/view_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:background="@drawable/text_field">

                <EditText
                    android:id="@+id/etMedicalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="10dp" />


            </LinearLayout>


            <Button
                style="@style/brown_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/view_margin"
                android:layout_marginRight="@dimen/view_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:text="Allergy Information"
                android:visibility="visible"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/view_margin"
                android:layout_marginLeft="@dimen/view_margin"

                android:layout_marginRight="@dimen/view_margin"
                android:layout_marginTop="@dimen/view_margin"
                android:background="@drawable/text_field">

                <EditText
                    android:id="@+id/etAllergyInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="10dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</ScrollView>